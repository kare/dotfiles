#!/bin/bash

case `uname` in
	Darwin)
		softwareupdate --install --all
		which brew > /dev/null
		if [ $? -eq 0 ]; then
			brew update
			brew upgrade --all
			brew linkapps
			brew cleanup
		fi
		which port > /dev/null
		if [ $? -eq 0 ]; then
			sudo port selfupdate
			port outdated
			port upgrade outdated
		fi
		;;
	Linux)
		sudo apt-get update
		sudo apt-get upgrade --show-upgraded
		sudo apt-get autoremove
		sudo apt-get autoclean
		sudo apt-get clean
		;;
	*)
		echo "only darwin and linux are supported"
		exit 1
		;;
esac
