#!/bin/bash

function usage() {
	echo "usage: validate-gofmt [-h]Â vanity-import-path" 1>&2
	echo "	generate validate-gofmt.sh script to stdout" 1>&2
	echo "	example: validate-gofmt kkn.fi/project > validate-gofmt.sh" 1>&2
}
if [ $# -lt 1 ]; then
	usage
	exit 1
fi
if [ "$1" == "-h" ]; then
	usage
    exit 1
fi
vanity=$1

cat << __GOFMT__
#!/bin/bash

import_path="$vanity"
__GOFMT__
cat << "__GOFMT__"
pkgs=`go list ./... | grep -v /vendor/`
ignored_pkgs=""

for pkg in $pkgs; do
	relative_path="${pkg/$import_path/.}"
	i=0
	for ignore_pkg in $ignored_pkgs; do
		if [ "$ignore_pkg" == "$relative_path" ]; then
			i=1
		fi
		if [ $i -eq 1 ]; then
			continue
		fi
	done
	output=`gofmt -s -l $relative_path`
	if [ "$output" != "" ]; then
		echo "validate-gofmt.sh: error $output" 1>&2
		exit 1
	fi
done
__GOFMT__
