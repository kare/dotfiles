#!/bin/bash

if [ "$1" = "-h" ]; then
	echo "Usage: dotfiles-update-modules [-h]Â [-u]" 1>&2
	echo "stash workspace, update modules, commit and pop stash" 1>&2
	exit 1
fi

dotfiles stash

for module in ~/.vim/bundle/*; do
	echo "Updating $module"
	cd "$module" || exit 1
	git checkout master
	git pull
	cd || exit 1
	dotfiles add "$module"
done
cd || exit 1
dotfiles commit -am "update Vim modules"
dotfiles stash pop
