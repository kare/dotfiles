#!/bin/bash
# dt: drawterm to a standalone cpu/auth/file server

case $# in
1)
	;;
*)
	echo "usage: dt user@server" 1>&2
	exit 1
	;;
esac

if [ "`ps -ef|grep XQuartz.app|grep -v grep`" == "" ]; then
        open -a XQuartz.app
        sleep 5
fi

IFS="@" read -r -a creds <<< "$1"
user="${creds[0]}"
hostname="${creds[1]}"
if [ `uname` == "Darwin" ]; then
	export DISPLAY=":0"
fi
drawterm -c $hostname -a $hostname -u $user &

