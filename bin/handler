#!/bin/bash

if [ -n "$1" ] && [ "$1" == "-h" ]; then
    echo "usage: handler [-h]Â [name]" 1>&2
    exit 1
fi
name=""
if [ -n "$1" ]; then
	name=$1
fi
cat << __END_HANDLER__
func $name(w http.ResponseWriter, r *http.Request) {
	w.Header().Set("Content-Type", "application/json;charset=utf-8")
	w.WriteHeader(http.StatusOK)
	w.Write([]byte(\`{"":""}\`))
}
__END_HANDLER__
