#!/bin/bash

function usage() {
	echo "usage: travis [-h]Â vanity-import-path" 1>&2
	echo "	print .travis.yml file for Go projects" 1>&2
	echo "	example: travis kkn.fi/project" 1>&2
}
if [ $# -lt 1 ]; then
	usage
	exit 1
fi
if [ "$1" == "-h" ]; then
	usage
    exit 1
fi
vanity=$1

cat << __TRAVIS__
dist: trusty
language: go
go_import_path: $vanity
go: 1.9.x
jobs:
    include:
        - stage: lint
          script:
              - ./ci/validate-gofmt.sh
              - go get -u github.com/golang/lint/golint
              - ./ci/validate-lint.sh
        - stage: test
          script: go test $vanity/...
          install: skip
__TRAVIS__
