#!/bin/bash

function usage() {
	echo "usage: git empty [-h]Â directory" 1>&2
}

if [ "$1" == "-h" ]; then
	usage
	exit 1
fi
if [ -z "$1" ]; then
	dir=.
else
	dir=$1
fi
if [ ! -d "$dir" ]; then
	mkdir -p "$dir"
fi

cd "$dir" || exit 3
if [ -d .git ]; then
	echo "git-empty: existing .git directory found. aborting." 1>&2
	exit 2
fi
git init .
if [ -e .gitignore ]; then
	tmpignore=$(mktemp)
	mv .gitignore "$tmpignore"
fi

email="kare.nuorteva@me.com"
case $(hostname) in
	"Kare-MacBook-Pro.local")
		email="kare.nuorteva@streamr.com"
	;;
esac
git config user.email "$email"
git config user.name "Kare Nuorteva"
git config color.ui false

touch .gitignore
git add .gitignore
git commit -m "Add empty .gitignore"
if [ -e "$tmpignore" ]; then
	mv "$tmpignore" .gitignore
fi
